@using Alkoshop.Models
@model IList<Product>


<div class=" container-fluid">
    <div class="row">
        @foreach (Product p in Model)
    {
        <div class="card  col-sm-4">
            <div class="card-header">
                <h4 class="my-0 font-weight-normal">@p.Name</h4>
            </div>
            <div class="card-body">
                <div class="col-2">
                    <img src="~/Design/jagger.jpg" alt="jagger"  width="200px" height="200px"/>
                </div>
                <div class="col-10">
                    <ul class="list-unstyled mt-3 mb-4">
                        <li>Producer: @p.Producer</li>
                        <!-- <li>Price: @p.PricePU</li>   -->
                        @if (p.availability == "yes")
                            {
                                 <li>Na skladě</li>
                            }
                            else
                            {
                                <li>Vyprodano</li>
                            }
                    </ul>
                </div>
                @if (p.availability == "yes")
                    {
                          <button type="button" class="btn btn-lg btn-block btn-outline-primary">Koupit teď</button>
                    }
           </div>

        </div>
    }

    </div>
   
</div>

   

